#!/bin/bash
UA="Spinach/0.3.2"
ssl='';col='';nc=''
AURURL="http%s://aur.archlinux.org"
AURPC="$AURURL/rpc.php?type=%s&arg=%s"

#functions so you can `. spinach -col`
aur_download() {
	p="$1" #package
	
	if [ -e "$p" ]; then
		printf "${col}Exists${nc}: %s\n" "$p"
		return 1
	else
		url="$(curl -sf -A "$UA" "$(printf $AURPC "$ssl" info "$p")" | sed -r '
			s/.*No result found.*//g
			s/.*URLPath":"([^"]+)".*/\1/g
			s/\\\//\//g')"
    		if [ -n "$url" ]; then
			curl -sf -A "$UA" "$(printf "$AURURL$url" "$ssl")" -o "$p.tar.gz"
			tar xzf "$p.tar.gz" &>/dev/null
			[ "$?" -gt "0" ] && saved="Not " || saved=""
			printf "${col}%sSaved${nc}: %s/\n" "$saved" "$p"
			rm "$p.tar.gz" &>/dev/null || return 1
		else
			printf "${col}Not Found${nc}: %s\n" "$p"
			return 1
		fi
	fi
}
aur_download_deps() {
	p="$1" #package
	inst="$2" #whether to install
	aur_download "$p" || return 1
	#get PKGBUILD depends
	if [ -e "$p/PKGBUILD" ]; then
		depends="$(cat "$p/PKGBUILD" | tr '\n' ' ' | \
			grep -Eo " (make)?depends=\([^)]*\)" 2>/dev/null | sed -r "
			s/.*\((.*)\).*/\1/mg
			s/(['\"])([^><=']*)[><=]+[^'\"]*\1/\2/mg
			s/['\"]//mg" | tr '\n' ' ' | sed -r "s/\\\$[^ ]+ //mg")"
	else
		printf "${col}Does not exist${nc}: %s\n" "$p/PKGBUILD"
		return 1
	fi
	#find AUR, non-installed depends
	for i in $depends; do
		pacman -Qi $(pacman -Qsq "$i"||echo -h) | \
			grep -E "^(Name|Provides)" | sed -r '
			s/^[^:]*: //mg
			s/=[^ ]*//mg' | tr ' ' '\n' | grep "^$i$" &>/dev/null
		provided="$?"
		pacman -Ssq "$i" | grep "^$i$" &>/dev/null
		official="$?"
		
		if [ "$official$provided" == "11" ] && [ ! -e "$i/" ]; then
			aur_download_deps "$i" "$inst" || return 1
		fi
	done
	#install
	if [ "$inst" == "install" ]; then
		if [ -e "$p/PKGBUILD" ]; then
			cd "$p" && aur_run_install
		else
			printf "${col}Not Found${nc}: %s\n" "$p/PKGBUILD"
			rm -rf "$p/" &>/dev/null
		fi
	fi
}
aur_updates() {
	update="$1"
	p="$(pacman -Qmq 2>/dev/null)" #packages
	#remove ignored
	ignore="$(grep ^IgnorePkg /etc/pacman.conf | sed -e "s/.*=\ //g")"
	for i in $ignore; do
		p="$(echo "$p" | grep -v "$i")"
	done
	#list of aur packages
	list=""
	for i in $p; do
		list="$list $(printf "$AURPC" "$ssl" info "$i")"
	done
	#get versions from aur 
	inaur="$(curl -s -A "$UA" $list | sed -re '
		s/\{[^}]*"results":"No result found"\}//g
		s/\{+[^}]*Name":"([^"]*)"[^}]*Version":"([^"]*)[^}]*\}+/\1\t\2\n/g')"
	#get installed versions
	inlocal="$(pacman -Qi $p | grep -E '^(Name|Version)' | tr '\n' ' ' | \
		sed -r 's/(Name|Version)\s+: /\n/g' | tail -n +2 | sed 's/ $//g')"
	#find differences
	IFS=$'\n'
	for i in $inaur; do
		name="$(echo $i | cut -f1)"
		#up-to-date version
		up="$(echo $i | cut -f2)"
		#installed version
		in="$(echo "$inlocal" | grep -A 1 "^$name$" | tail -n 1)"
		
		if [ -z "$(echo "$up" | grep "No result found")" ] \
		&& [ -n "$up" ] && [ -n "$in" ] && [ "$up" != "$in" ]; then
			[ -n "$update" ] && download="$download $name"
			printf "${col}%s${nc} (%s => %s)\n" "$name" "$in" "$up"
		fi
	done
}
aur_install() {
	blank_editor || return 1
	#from repos
	if [ -n "$rep" ]; then
		if pacman -Si "$1" &>/dev/null; then
			type sudo &>/dev/null && runsudo="sudo" || runsudo="su -c"
			printf "${col}Running${nc}: $runsudo pacman -S %s\n" "$1"
			$runsudo pacman -S "$1"
			return $?
		fi
	fi
	#from AUR
	aur_create_tmp || return 1
	cd "$tmp"
	aur_download_deps "$1" install
}
aur_download_updates() {
	aur_updates u #outputs to $download
	IFS=$' '
	for i in $download; do
		aur_download "$i"
	done
}
aur_install_updates() {
	blank_editor || return 1
	aur_create_tmp || return 1
	#lock
	[ -e "$tmp/update.lock" ] && echo -e "${col}Error${nc}: update lock exists" && return 1
	touch "$tmp/update.lock"
	#clean on kill
	trap "for i in \$download; do rm -rf \"$tmp/\$i/\" &>/dev/null;done;
		rm \"$tmp/update.lock\";echo;exit 1" 2 15
	cd "$tmp"
	#get (list in $download)
	aur_download_updates
	#install
	for i in */; do
		if echo "$download" | tr ' ' '\n' | grep "^${i:0:-1}$" &>/dev/null && \
		[ -e "$i/PKGBUILD" ]; then
			cd "$i"
			ask_yes_no "View ${i:0:-1}?"
			[ "$response" == "y" ] && aur_run_install notrap
			cd "$tmp"
		fi
	done
	#clean
	for i in $download; do
		rm -rf "$i/" &>/dev/null
	done
	rm "update.lock"
	trap - 2 15
}
aur_info() {
	if [ -n "$rep" ]; then
		info="$(pacman -Si "$1" 2>/dev/null)"
		gotinfo=$?
		
		if [ -n "$info" ]; then
			echo "$info" | aur_display_color
		fi
	fi
	if [ -z "$rep" ] || [ "$gotinfo" != "0" ]; then
		curl -A "$UA" "$(printf $AURPC "$ssl" info "$1")" 2>/dev/null | sed -r '
		s/.*No result found.*/Error:Package not found/g
		s/\\"/\&QUOT;/g
		s/.*results":\{(.*)\}\}/\1/g
		s/\",\"/\"\n\"/g
		s/\\\//\//mg
		s/"//mg
		s/^([^:]*):/\1: /mg
		s/\\\\/\\/mg
		s/\&QUOT;/"/mg
		s/^URLPath: /URLPath: https:\/\/aur.archlinux.org/mg' | aur_display_color
		echo
	fi
}
aur_search() {
	if [ -n "$rep" ]; then
		pacman -Ss "$1" | sed -r 's/^([^/\s]+\/[^ ]+) [^\n]+$/\1/g' | \
			sed -rn '1h;1!H;${;g;s/\n\s+/: /g;p;}' | aur_display_color
	fi
	curl -A "$UA" "$(printf $AURPC "$ssl" search "$1")" 2>/dev/null | sed -r '
	s/.*(No results found).*/\1\n/g
	s/\\"/\&QUOT;/g
	s/.*\[([^"]*)\]}}/\1/g
	s/\{[^}]*"Name":"([^"]*)",[^}]*,"Description":"([^"]*)"[^}]*\}/\1: \2\n/g
	s/^,//mg
	s/\\\//\//mg
	s/\\\\/\\/mg
	s/\&QUOT;/"/mg
	s/^]}//mg' | aur_display_color
}

#functions used in above functions
aur_run_install() {
	trap="$1"
	pwd="$(pwd)"
	$EDITOR PKGBUILD
	inst="$(grep ^install= PKGBUILD | cut -d= -f2 | tr -d "'\"")"
	[ -e "$inst"  ] && $EDITOR "$inst"
	#clean if killed
	if [ -z "$trap" ]; then
		trap "[ -e \"$pwd/PKGBUILD\" ] && rm -rf \"$pwd/\" \
			&>/dev/null;echo;exit 1" 2 15
	fi
	#install
	ask_yes_no "Install?"
	[ "$response" == "y" ] && makepkg -sirc
	#clean
	rm -rf "$pwd/" &>/dev/null
	[ -z "$trap" ] && trap - 2 15
}
aur_create_tmp() {
	[ -z "$TMPDIR" ] && TMPDIR="/tmp"
	tmp="$TMPDIR/aur_spinach"
	if [ ! -e "$tmp" ]; then
		if ! mkdir -p "$tmp" &>/dev/null; then
			printf "${col}Error${nc}: could not create %s\n" "$tmp"
			return 1
		fi
	fi
}
aur_display_color() {
	if [ -n "$col" ] && type xargs &>/dev/null; then
		cat /dev/stdin | sed -r 's/^([^: \t]+[^:]*): +/\'$col'\1\'$nc': /g' \
			| xargs -0 echo -en
	else
		cat /dev/stdin
	fi
}
blank_arg() {
	[ -z "$1" ] && echo -e "${col}Error${nc}: Please specify a package." && exit 1
}
ask_yes_no() {
	while true; do
		echo -n "y/n: $1 "
		read resp
		
		if [ "$resp" == "y" ] || [ "$resp" == "n" ]; then
			response="$resp"
			return 0
		fi
	done
}
blank_editor() {
	if [ -z "$EDITOR" ]; then
		eds=(vim vi emacs nano most less more cat)
		for i in $eds; do
			if type $i &>/dev/null; then
				EDITOR="$i"
				printf "${col}Note${nc}: No \$Editor, using '%s'\n" "$i"
				break
			fi
		done
		if [ -z "$EDITOR" ]; then
			echo -e "${col}Error${nc}: set \$EDITOR"
			return 1
		fi
	fi
}
aur_spinach_help() {
	echo -e "${col}Usage${nc}: spinach [options] [operation] [package]
	Options:
	-ssl	Use SSL
	-col	Use color
	-rep	Also use pacman with -s, -i, and -p
	
	Common operations:
	-s	Search for package
	-i	Install package
	-p	Print package info
	-u	Update packages
	
	Do-it-yourself operations:
	-d	Download package
	-dd	Download package and AUR dependencies
	-o	List out-of-date packages
	-do	Download out-of-date packages"
}

while [ -n "$1" ]; do
	case "$1" in
		#options
		"-ssl") ssl="s";;
		"-col") col='\e[0;31m'; nc='\e[0m';;
		"-rep") rep="y";;
		#common
		"-s") shift; blank_arg "$1"; aur_search "$1";;
		"-i") shift; blank_arg "$1"; aur_install "$1";;
		"-p") shift; blank_arg "$1"; aur_info "$1";;
		"-u") aur_install_updates;;
		#diy
		"-d") shift; blank_arg "$1"; aur_download "$1";;
		"-dd") shift; blank_arg "$1"; aur_download_deps "$1";;
		"-o") aur_updates;;
		"-do") aur_download_updates;;
		#other
		"--version") echo "$UA";; 
		"-h"|"--help") aur_spinach_help; exit 0;;
	esac
	shift
done
